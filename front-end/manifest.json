{
  "name": "musicAddict",
  "version": "1.0.0",
  "description": "An interactive music app.",
  "manifest_version": 3,
  "action": {
    "default_popup": "main.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "main.html",
        "style.css",
        "script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
